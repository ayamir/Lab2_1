<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/row_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:autofillHints="@string/example_id"
        android:gravity="center"
        tools:ignore="LabelFor" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:autofillHints="@string/example_name"
        android:gravity="center"
        android:inputType="text"
        tools:ignore="LabelFor" />

    <EditText
        android:id="@+id/et_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:autofillHints="@string/example_gender"
        android:gravity="center"
        android:inputType="text"
        tools:ignore="LabelFor" />

    <EditText
        android:id="@+id/et_department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:autofillHints="@string/example_department"
        android:gravity="center"
        android:inputType="text"
        tools:ignore="LabelFor" />

    <EditText
        android:id="@+id/et_salary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:autofillHints="@string/example_department"
        android:gravity="center"
        android:inputType="numberDecimal"
        tools:ignore="LabelFor" />

    <Spinner
        android:id="@+id/action_spinner"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:entries="@array/actions" />

    <ImageView
        android:id="@+id/btn_apply"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/apply"
        android:gravity="fill"
        android:contentDescription="@string/description_apply" />

</LinearLayout>